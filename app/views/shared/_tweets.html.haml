-# scssファイルは、/tweet/_index.scssにあります。
%ul.tweets-contener
  -@tweets.each do |tweet|
    %li.tweet-contener
      =link_to "","/tweets/#{tweet.id}", class: "link-btn"
      .avater-contener
        =link_to (image_tag "#{tweet.user.avater.url}", alt: "", class: "avater-size"), "/users/#{tweet.user_id}" 
      .contents-contener
        .contents-contener__user
          =link_to "#{tweet.user.name}", "/users/#{tweet.user_id}", class:"user-name" 
          .daytime
            =tweet.created_at.strftime("%Y-%m-%d %H:%M")
        .contents-contener__text
          =tweet.tweet
        .contents-contener__image
        -if tweet.image.url
          =link_to (image_tag tweet.image.url, alt: "", class: "image-size"), "#"
        .contents-contener__contents
          -if user_signed_in?
            .contents-contener__contents--likebtn-font
              -if tweet.like_by?(current_user)
                =link_to tweet_likes_path(tweet.id), method: :delete do
                  =icon 'far', 'heart'
                  =tweet.likes.count
              -else
                =link_to tweet_likes_path(tweet.id), method: :post do
                  =icon 'far', 'heart'
                  =tweet.likes.count
          -else
            .contents-contener__contents--likebtn-font
              =icon 'far', 'heart' 
              =tweet.likes.count 
          .contents-contener__contents--comment-font
            =icon 'far', 'comments', "#{tweet.comments.count}"