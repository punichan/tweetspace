!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Tweetspace
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %link{:href => "https://fonts.googleapis.com/css?family=Lato:400,700|Noto+Sans+JP:400,700", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"}

    -# %script{:src => "/path/to/infinite-scroll.pkgd.min.js"}
  %body
    #wapper
      .header
        .header-left
          .header-left__title
            =link_to "/", class:"header-left__title--font" do
              %p OSAKA
              %P LUNCH

        .header-right
          .header-right__contents
            =link_to "みんなのTweet", tweets_path, class: "header-right__contents--tweet" 

          -if user_signed_in?
            .header-right__posts
              =link_to "Tweet投稿", new_tweet_path, class: "header-right__posts--tweet" 
                
          
          .header-right__user-contents
            -if user_signed_in?
              =link_to "SIGN OUT", destroy_user_session_path, method: :delete, class: "header-right__user-contents--page"
              =link_to "MY PAGE", "/users/#{current_user.id}", class: "header-right__user-contents--page"
            -else
              =link_to "SIGN IN", new_user_session_path, class: "header-right__user-contents--page"
              =link_to "SIGN UP", new_user_registration_path, class: "header-right__user-contents--page"
                

      = yield
      
    .fotter
      .fotter__title
        =link_to "/", class:"fotter__title--font" do
          %p OSAKA
          %P LUNCH