-if user_signed_in? && tweet.like_by?(current_user)
  =link_to tweet_likes_path(tweet.id), method: :delete, remote: true do
    =icon 'far', 'heart', class: "contents-area__mark--red"
-else
  =link_to tweet_likes_path(tweet.id), method: :post, remote: true do
    =icon 'far', 'heart', class: "contents-area__mark--heart"