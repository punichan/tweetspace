.form-contener
  %h2.form-contener__title Edit Tweet
  =form_with model: @tweet, class: "new", local: true do |f|
    .field
      =f.label :image
      =f.file_field :image, autofocus: true, autocomplete: "image"
    .field
      =f.label :food
      =f.text_area :food, autofocus: true, rows: 1, cols: 50, placeholder: "Up to 100 characters"
    .field
      =f.label :price
      =f.text_area :price, autofocus: true, rows: 1, cols: 50, placeholder: "Up to 100 characters"
    .field
      =f.label :place_id
      =f.collection_select :place_id, Place.all, :id, :name, prompt: true
    .field
      =f.label :category_id
      =f.collection_select :category_id, Category.all, :id, :name, prompt: true
    .field
      =f.label :tweet
      =f.text_area :tweet, autofocus: true, rows: 5, cols: 50, placeholder: "Up to 100 characters"
    .actions
      =f.submit "send", class: "actions__btn"
      =link_to "BACK", :back, class: "actions__back"
