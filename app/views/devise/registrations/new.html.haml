.contener
  .SignForm-title-contener
    %h2 Sign Up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :avater
        = f.file_field :avater, autofocus: true, autocomplete: "avater", class: "textfield-size"
      .field
        =f.label :profile
        =f.text_area :profile, autofocus: true, rows: 5, cols: 50, placeholder: "300文字以内"
      .field
        = f.label :name
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "textfield-size", placeholder: "8文字以内"
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "textfield-size"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
        = f.password_field :password, autocomplete: "new-password", class: "textfield-size", placeholder: "6文字以内"
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "textfield-size"
      .actions
        = f.submit "Sign up", class: "actions__btn"
        = link_to "Sign in", new_session_path(resource_name), class: "actions__signbtn"
        