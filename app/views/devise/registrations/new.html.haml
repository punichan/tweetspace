.contener
  %h2.sign-text Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :avater
      %br/
      = f.file_field :avater, autofocus: true, autocomplete: "avater", class: "textfield-size"
    .field
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: "textfield-size"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "textfield-size"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "textfield-size"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "textfield-size"
    .actions
      = f.submit "Sign up", class: "actions__btn"
    %p.login-text You already have an account.
    = link_to "Sign in", new_session_path(resource_name), class: "login-btn"
      